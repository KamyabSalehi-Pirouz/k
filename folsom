# Question 1

# Get user inputs
km = input("Enter the number of kilometers: ")

# Calculate the miles equivalent
mi = round(float(km) * 0.621)

# Print results
print('The number of miles is: ', mi)

# Question 2

# Get user inputs
seconds1 = float(input("Please enter a number of seconds: "))

# Calculations
hours = round(seconds1 / 3600)

minutes = round(seconds1 // 3600 / 60)

seconds = round(seconds1) % 60 

print("The total amount of time is ", hours, " hours, " , minutes, " minutes and ", seconds, " seconds.")


print("Question 3")

km = float(input("Enter the distance you ran in kilometers: "))

minutes = float(input("Enter the amount of minutes you ran: "))

seconds1 = float(input("Enter the amount of seconds you ran: "))

total_seconds = minutes * 60 + seconds1

miles = round(float(km) * float(0.621))

pace_min = round(float(minutes) / float(miles))

pace_min2 = (float(minutes) / float(miles))

pace_sec = round(abs((pace_min2 - pace_min) * 60))

print("You ran about ", miles, " miles at a pace of ", (pace_min), " minutes and " , pace_sec, " seconds per mile.")



print("Question 4")

US = float(input("Please enter a number of $US "))

fee = float(input("Please enter a conversion fee: "))

conversion = float(input("Please enter the value of US dollars for every 1 Galleon: "))

Galleons = round((US - fee) / conversion)

print("You will receive", (Galleons), "full units of Galleons.")


    






